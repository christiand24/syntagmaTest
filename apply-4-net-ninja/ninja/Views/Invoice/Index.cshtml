@model IEnumerable<ninja.Models.InvoiceVM>

@{
    ViewBag.Title = "Index";
}

<h2>Invoice list</h2>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Id)</th>
        <th>@Html.DisplayNameFor(model => model.InvoiceType)</th>
        <th>@Html.DisplayNameFor(model => model.InvoiceTotalPriceWithTaxes)</th>
        <th>@Html.ActionLink("Create New", "New")</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>@Html.DisplayFor(modelItem => item.Id)</td>
        <td>@Html.DisplayFor(modelItem => item.InvoiceType)</td>
        <td>@Html.DisplayFor(modelItem => item.InvoiceTotalPriceWithTaxes)</td>
        <td>
            @Html.ActionLink("Update", "Update", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
